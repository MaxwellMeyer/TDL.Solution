@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model IEnumerable<ToDoList.Models.Item>

<h1>Items for @User.Identity.Name</h1>

@if (Model.Any())
{

  @foreach (Item item in Model)
  {
    @if (item.Status == true)
    {
      <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId })<span class="done">DONEZO</span><a
    href="/items/@item.ItemId/statusIncomplete">Mark as INCOMPLETE</a>
</li>
    }
    else if (item.Status == false)
    {
      <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId })<span class="inProg">IN
    PROGRESS</span><a href="/items/@item.ItemId/statusComplete">Mark as COMPLETE</a></li>

    }
    else
    {
      <h3>No items have been added yet!</h3>
    }
  }
}

<p>@Html.ActionLink("Add new item", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>